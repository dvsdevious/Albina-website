     <div class="banner-area-joinme">
      <div class="content-area-joinme">
        <h1>Sign Up</h1>
        <form action="/register" method="POST">
          <div class="mb-3">
              <label for="name">Name</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Полное Имя"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email">Email</label>
            <input
              type="text"
              name="email"
              id="email"
              placeholder="abc@gmail.com"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              required
            />
          </div>
          <button class="joinme-button" type="submit">
            Sign Up - Test
          </button>
        </form>
      </div>
    </div>
    <a href='/login'>Login</a>
  </body>
