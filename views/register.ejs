<div class="banner-area-joinme">
  <div class="content-area-joinme">
    <h1>Sign Up</h1>
    <form action="/register" method="POST">
      <div class="mb-3">
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Полное Имя"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <input
          type="email"
          name="email"
          id="email"
          placeholder="abc@example.com"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="joinme-button" type="submit">Register</button>
    </form>
    <a href="/login">Login</a>
  </div>
</div>
